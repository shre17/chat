<% if user_signed_in?  || pro_signed_in? %>
  <div class="row">
    <% if current_user %>
      <div class="col-md-9">
        <ul id="conversations-list">
          <% @user_conversations.each do |conversation| %>
            <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
          <% end %>
        </ul>
      </div>
    <% else %>
      <div class="col-md-9">
        <ul id="conversations-list">
          <% @pro_conversations.each do |conversation| %>
            <%= render 'conversations/conversation', conversation: conversation, user: current_pro %>
          <% end %>
        </ul>
      </div>
    <% end %>
   
    <div class="col-md-3">
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">User list</h3>
        </div>
        <div class="panel-body">
          <ul>
            <% @users.each do |user| %>
              <li><%= link_to user.email, conversations_path(user_id: user), remote: true, method: :post, "data-turbolinks"=> false %>
                <% if user.is_online? %>
                  &nbsp<i class="fa fa-circle" style="font-size:12px;color:#37c137;"></i>
                <% end %>
              </li>
            <% end %>
            <% @pros.each do |user| %>
              <li><%= link_to user.email, conversations_path(pro_id: user), remote: true, method: :post, "data-turbolinks"=> false %>
                <% if user.is_online? %>
                  &nbsp<i class="fa fa-circle" style="font-size:12px;color:#37c137;"></i>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% end %>  