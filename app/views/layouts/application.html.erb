<!DOCTYPE html>
<html>
  <head>
    <title>Chat</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application'%>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <div class="container">
      <%  if user_signed_in? %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "btn btn-primary" %>
      <% elsif pro_signed_in? %>
        <%= link_to "Logout", destroy_pro_session_path, method: :delete, class: "btn btn-primary" %>
      <% else %>
        <%= link_to "Login as user", new_user_session_path, class: "btn btn-primary" %>
        <%= link_to "Login as pro", new_pro_session_path, class: "btn btn-primary" %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
